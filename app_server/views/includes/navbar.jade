nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid.container-navbar
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-1', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Home
      ul.nav.navbar-nav
        //- if (existingUserMonths)
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Standings
              span.caret
            ul.dropdown-menu
                each month in existingUserMonths
                  li
                    a(href='/standings/#{month}')=moment(month).format('MMMM')
        //- if(existingUserMonths)
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') My Picks
              span.caret
            ul.dropdown-menu
              each month in existingUserMonths
                li
                  a(href='/month/#{month}')=moment(month).format('MMMM YYYY')
    // Collect the nav links, forms, and other content for toggling
    #navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        -if(!loggedIn)
          li
            form#login-form.navbar-form.form(action='/login', method='post', role='form')
              .form-group
                label Username: &nbsp;
                input.form-control(type='text' name='username' autocomplete='off' size='15' autofocus required)
              .form-group
                label Password: &nbsp;
                input.form-control(type='password' name='password' size='15' required)
              button.btn.btn-default(type='submit') Log In
        -if(loggedIn)
          li
            a(href='/how-to-play')
              | How to Play 
          li
            a(href='https://goo.gl/forms/iWjt8lWwQ815G77Y2' target='_blank')
              | Feedback Form
        -if(loggedIn)
          li
            a(href='/login') Sign Out