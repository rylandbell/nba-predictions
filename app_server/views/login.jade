extends ./layouts/layout

block content
  .row.login-view
    .col-xs-12.col-sm-6
      .panel.panel-primary
        .panel-heading
          .panel-title  Log In
        .panel-body
          form.form(action='/login', method='post', role='form')
            .form-group
              label Username: &nbsp;
              input.form-control(type='text' name='username' autocomplete='off' autofocus required)
            .form-group
              label Password: &nbsp;
              input.form-control(type='password' name='password' required)
            button.btn.btn-default(type='submit') Submit
    .col-xs-12.col-sm-6
      .panel.panel-primary
        .panel-heading
          .panel-title Create New Account
        .panel-body
          form#register-form.form(action='/register', method='post', role='form')
            .form-group
              label Username: &nbsp;
              input.form-control(type='text' name='username' autocomplete='off' required)
            .form-group
              label Display Name: &nbsp;
              input.form-control(type='text' name='displayName' autocomplete='off' required)
            .form-group
              label Password: &nbsp;
              input.form-control(type='password' name='password' required)
            button.btn.btn-default(type='submit') Submit
  -if(message)
    .alert.alert-warning= message
  -else
    #message-box.alert.alert-warning.invisible

